{
  "name": "next-friday-turbo-repo",
  "version": "1.0.0",
  "private": true,
  "description": "This utility is currently under development and is intended for internal use only. It is not suitable for public use at this stage.",
  "keywords": [
    "next-friday-turbo-repo",
    "react",
    "component",
    "ui",
    "design",
    "system",
    "design-system"
  ],
  "homepage": "https://github.com/next-friday/next-friday-turbo-repo",
  "bugs": {
    "url": "https://github.com/next-friday/next-friday-turbo-repo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/next-friday/next-friday-turbo-repo.git"
  },
  "license": "MIT",
  "author": {
    "name": "Joe Takara",
    "email": "anuchit.boonsom@gmail.com"
  },
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "pnpm turbo:clean && pnpm clean:build && pnpm clean:node-modules && pnpm clean:lock && pnpm install --hoist",
    "clean:build": "rimraf ./apps/**/dist && rimraf ./apps/**/storybook-static && rimraf ./packages/**/dist && rimraf ./packages/**/**/dist",
    "clean:lock": "rm ./pnpm-lock.yaml",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rm -rf ./node_modules",
    "dev": "turbo dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:packages": "eslint \"./packages/**/*.{ts,tsx}\" --config .eslintrc.json",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sort-package-json": "sort-package-json && pnpm sort-package-json:workspace",
    "sort-package-json:workspace": "turbo sort-package-json:workspace",
    "test": "node -r ts-node/register node_modules/jest/bin/jest.js --verbose --config ./jest.config.ts",
    "tsc": "turbo tsc",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/types": "^18.4.3",
    "@swc-node/jest": "^1.6.8",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "clean-package": "^2.2.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.6.0",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "tsup": "^8.0.1"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
