{
  "name": "next-friday-turbo-repo",
  "version": "1.0.0",
  "private": false,
  "description": "This utility is currently under development and is intended for internal use only. It is not suitable for public use at this stage.",
  "keywords": [
    "next-friday-turbo-repo",
    "react",
    "component",
    "ui",
    "design",
    "system",
    "design-system"
  ],
  "homepage": "https://github.com/next-friday/next-friday-turbo-repo",
  "bugs": {
    "url": "https://github.com/next-friday/next-friday-turbo-repo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/next-friday/next-friday-turbo-repo.git"
  },
  "license": "MIT",
  "author": {
    "name": "Joe Takara",
    "email": "anuchit.boonsom@gmail.com"
  },
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "pnpm turbo:clean && pnpm clean:build && pnpm clean:node-modules && pnpm clean:lock && pnpm install --hoist",
    "clean:build": "rimraf ./apps/**/dist && rimraf ./apps/**/lib && rimraf ./apps/**/storybook-static && rimraf ./packages/**/**/dist",
    "clean:lock": "rm ./pnpm-lock.yaml",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rm -rf ./node_modules",
    "dev": "turbo dev",
    "eslint": "pnpm eslint:workspace-package",
    "eslint:workspace-package": "eslint -c .eslintrc.json ./packages/**/**/*.{ts,tsx}",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sort-package-json": "sort-package-json && pnpm sort-package-json:workspace",
    "sort-package-json:workspace": "turbo sort-package-json:workspace",
    "tsc": "turbo tsc",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/types": "^18.4.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.6.0",
    "tsup": "^8.0.1",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
