{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "declarationMap": true,
    "baseUrl": "."
  },
  "include": ["src/**/*", "stories/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
